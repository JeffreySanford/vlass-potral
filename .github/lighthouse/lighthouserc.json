{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "url": [
        "http://localhost:4200/",
        "http://localhost:4200/auth/login"
      ],
      "settings": {
        "formFactor": "mobile",
        "throttlingMethod": "simulate"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.7 }],
        "first-contentful-paint": ["warn", { "maxNumericValue": 3000 }]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./test-output/lighthouse"
    }
  }
}
