{
  "name": "@cosmic-horizons/source",
  "version": "1.0.0",
  "description": "Scientific operations platform for AI-driven radio astronomy, supporting ngVLA data orchestration and CosmicAI infrastructure.",
  "license": "MIT",
  "keywords": [
    "radio-astronomy",
    "cosmic-horizons",
    "ngvla",
    "cosmicai",
    "astronomical-viewer",
    "interferometry",
    "science-operations"
  ],
  "scripts": {
    "start:web": "pnpm nx serve cosmic-horizons-web",
    "start:api": "pnpm nx serve cosmic-horizons-api",
    "start:preflight": "node scripts/check-runtime-preflight.mjs",
    "start:ports:free": "node scripts/ensure-ports-free.mjs",
    "start:infra:check": "node scripts/ensure-docker-ready.mjs",
    "start:infra": "pnpm run start:infra:check && docker compose up -d --wait",
    "start:infra:reset": "pnpm run start:infra:check && docker compose down --remove-orphans --volumes && docker compose build --pull && docker compose up -d --wait",
    "start:all": "pnpm run start:ports:free && pnpm run start:infra && pnpm run start:preflight && pnpm run start:ports:free && pnpm nx run-many --target=serve --projects=cosmic-horizons-web,cosmic-horizons-api --parallel=2 --skip-nx-cache",
    "start:all:reset": "pnpm run start:ports:free && pnpm run start:infra:reset && pnpm run start:preflight && pnpm run start:ports:free && pnpm nx run-many --target=serve --projects=cosmic-horizons-web,cosmic-horizons-api --parallel=2 --skip-nx-cache",
    "monitor:messaging": "node scripts/monitor-messaging.mjs",
    "start": "pnpm start:web",
    "test": "pnpm standalone:check && pnpm nx run-many --target=test --all",
    "test:web": "pnpm nx test cosmic-horizons-web",
    "test:api": "pnpm nx test cosmic-horizons-api",
    "test:coverage": "pnpm nx run-many --target=test --all --coverage --watch=false",
    "test:coverage:web": "pnpm nx test cosmic-horizons-web --coverage --watch=false",
    "test:coverage:api": "pnpm nx test cosmic-horizons-api --coverage --watch=false",
    "test:coverage:report": "node scripts/generate-coverage-reports.mjs",
    "test:coverage:report:json": "node scripts/generate-coverage-reports.mjs --format json",
    "test:coverage:thresholds": "node scripts/generate-coverage-reports.mjs --threshold-only",
    "e2e:mvp": "pnpm nx run mvp-gates:e2e",
    "e2e:ci": "pnpm run start:ports:free && pnpm run start:infra:reset && pnpm nx run mvp-gates:e2e",
    "build": "pnpm nx run-many --target=build --all",
    "lint": "pnpm nx run-many --target=lint --all",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:check:changed": "node scripts/check-format-changed.mjs",
    "standalone:check": "node scripts/check-angular-standalone-false.mjs",
    "lighthouse:mobile": "pnpm dlx @lhci/cli@0.14.0 autorun --config=.github/lighthouse/lighthouserc.json",
    "lighthouse:summary": "node scripts/summarize-lighthouse.mjs",
    "openapi:check": "node scripts/check-openapi.mjs",
    "security:audit": "pnpm audit --prod --audit-level=high",
    "docs:check": "node scripts/check-doc-consistency.mjs",
    "quality:ci": "pnpm nx run docs-policy:check && pnpm format:check:changed && pnpm openapi:check && pnpm standalone:check && pnpm nx run-many --target=test --all && pnpm nx run mvp-gates:e2e"
  },
  "private": true,
  "devDependencies": {
    "@angular-devkit/core": "~21.1.0",
    "@angular-devkit/schematics": "~21.1.0",
    "@angular/animations": "^21.1.3",
    "@angular/build": "~21.1.0",
    "@angular/cdk": "^21.1.3",
    "@angular/cli": "~21.1.0",
