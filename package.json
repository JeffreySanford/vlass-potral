    "@nx/vitest": "22.4.5",
    "@nx/web": "22.4.5",
    "@nx/webpack": "22.4.5",
    "@playwright/test": "^1.36.0",
    "@schematics/angular": "~21.1.0",
    "@swc-node/register": "~1.9.1",
