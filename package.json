    "jest-util": "^30.0.2",
    "jsdom": "^27.1.0",
    "nx": "22.4.5",
    "prettier": "~3.6.2",
    "socket.io-client": "^4.8.3",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.0.0",
    "vitest": "^4.0.8",
    "webpack-cli": "^5.1.4"
  },
