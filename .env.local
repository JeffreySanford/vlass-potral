# Local Development Environment
# This file is gitignored and safe for local development secrets

# Database Configuration
DB_HOST=localhost
DB_PORT=15432
DB_USER=vlass_user
DB_PASSWORD=vlass_password_dev
DB_NAME=vlass_portal

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=vlass_redis_dev

# API Configuration
API_PORT=3000
API_PREFIX=api
NODE_ENV=development

# Frontend Configuration
FRONTEND_PORT=4200
FRONTEND_URL=http://localhost:4200

# GitHub OAuth (create app at https://github.com/settings/developers)
GITHUB_CLIENT_ID=dev_client_id
GITHUB_CLIENT_SECRET=dev_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your_super_secret_jwt_key_min_32_chars_long_here
JWT_EXPIRES_IN=7d

# VLASS Data API
VLASS_API_BASE_URL=https://api.vlass.org
VLASS_API_TIMEOUT=30000

# Audit & Cache
AUDIT_RETENTION_DAYS=90
REDIS_CACHE_TTL=86400
